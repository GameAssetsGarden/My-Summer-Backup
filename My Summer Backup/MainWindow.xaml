<Window x:Class="My_Summer_Backup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_Summer_Backup"
        mc:Ignorable="d"
        Title="My Summer Backup" Width="600">
    <Grid>
        <Button x:Name="createBackupButton" Content="Create Backup" Margin="6,18,0,0" VerticalAlignment="Top" Width="106" Height="26" HorizontalAlignment="Left" Cursor="Hand" Click="createBackup"/>
        <TextBox x:Name="fileNameTextBox" Height="26" Margin="132,18,5.6,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="loadBackupButton" Content="Load Backup" HorizontalAlignment="Left" Margin="6,83,0,0" VerticalAlignment="Top" Width="106" Height="26" Cursor="Hand" Click="loadBackup"/>
        <ListBox x:Name="fileNameListBox" Margin="6,125,6,6" VerticalContentAlignment="Top">
            <ListBoxItem Content="No Backups Found" Height="21" Cursor="Hand"/>
        </ListBox>
        <TextBox x:Name="backupStatusTextBox" Height="26" Margin="132,85,5.6,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
    </Grid>
</Window>
